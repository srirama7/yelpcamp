<% layout('layouts/boilerplate') %>
    
    <div class="row">
        <h1 class="text-center ">Edit ⛺</h1>
        <div class="col-6 offset-3">
            <form action="/camp/<%=camps._id %>?_method=put" method="post"class="row g-3 needs-validation" novalidate>
                <!-- title -->
                <div class="mb-3 ">
                    <label class="form-label " for="title">Title</label>
                    <input class="form-control " value="<%=camps.title %>" type="text" id="title" name="camp[title]" required>
                </div>
                
                <!-- location -->
                <div class="mb-3">
                    <label class="form-label "  for="location">Location</label>
                    <input class="form-control "   type="text" id="location" name="camp[location]" value="<%=camps.location %>" required>
                </div>
                <!-- image -->
                <div class="mb-3">
                    <label class="form-label "  for="image">Image Url</label>
                    <input class="form-control "   type="text" id="image" name="camp[image]" value="<%=camps.image %>" required>
                </div>
                <!-- description -->
                <div class="mb-3">
                    <label class="form-label "  for="description">Description</label>
                    <textarea class="form-control "   type="text" id="description" name="camp[description]" required><%=camps.description %></textarea>
                </div>
    
                <!-- price -->
                <div class="mb-3">
                    <label class="form-label "  for="price">Price</label>
    
                <div class="input-group ">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">₹</span>
                    </div>
                    <input type="text" class="form-control"  id="price" name="camp[price]" value="<%=camps.price %>" required>
                  </div>
                </div>
    
                <div class="mb-3"></div>
                <button class="btn btn-success ">UPDATE</button>
                <a class="btn btn-primary" href="/camp">Back </a>
            </div>
            </form>
         
    
        </div>
      </div>
    
  






