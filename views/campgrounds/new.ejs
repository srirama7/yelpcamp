<% layout('layouts/boilerplate') %>
  <div class="row">
    <h1 class="text-center ">New CampgroundüèïÔ∏è</h1>
    <div class="col-6 offset-3">
        <form action="/camp" method="post" class="row g-3 needs-validation" novalidate>
            <!-- title -->
           
            <div class="mb-3 ">
                <label class="form-label " for="title">Title</label>
                <input class="form-control "   type="text" id="title" name="camp[title]" required>
            </div>
            
            <!-- location -->
            <div class="mb-3">
                <label class="form-label "  for="location">Location</label>
                <input class="form-control "   type="text" id="location" name="camp[location]" required>
            </div>
            <!-- image -->
            <div class="mb-3">
                <label class="form-label "  for="image">Image Url</label>
                <input class="form-control "   type="text" id="image" name="camp[image]" required>
            </div>
            <!-- description -->
            <div class="mb-3">
                <label class="form-label "  for="description">Description</label>
                <textarea class="form-control "   type="text" id="description" name="camp[description]" required></textarea>
            </div>

            <!-- price -->
            <div class="mb-3">
                <label class="form-label "  for="price" required>Price</label>

            <div class="input-group ">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1">‚Çπ</span>
                </div>
                <input type="text" class="form-control"  id="price" name="camp[price] " required >
              </div>
            </div>

            <div class="mb-3"></div>
            <button class="btn btn-success ">ADD</button>
            <a class="btn btn-primary" href="/camp">Back </a>
        </div>
        </form>
     

    </div>
  </div>

    
   
  
    
  

 